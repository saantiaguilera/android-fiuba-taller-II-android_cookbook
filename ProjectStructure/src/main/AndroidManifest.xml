<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saguilera.androidfiuba">

    <!-- Manifest! Our manifest is the place were we declare our """metadata""" information
    for example app permissions and entry points, such as activities / services / etc-->

    <!-- Here we define our application, which icon should use, the name, etc -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Here we could define things in the scope of an application. Activities, services... -->

    </application>
</manifest>
