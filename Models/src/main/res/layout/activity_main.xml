<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_main_jsontext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:gravity="center"

        android:scrollbars="vertical"

        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:background="@color/colorAccent"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_main_serializeBuyer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:textSize="20sp"
            android:gravity="center"

            android:text="Serialize Buyer"/>

        <TextView
            android:id="@+id/activity_main_serializeSeller"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:textSize="20sp"
            android:gravity="center"

            android:text="Serialize Seller"/>

        <TextView
            android:id="@+id/activity_main_parseBuyer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:textSize="20sp"
            android:gravity="center"

            android:text="Parse Buyer"/>

        <TextView
            android:id="@+id/activity_main_parseSeller"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:textSize="20sp"
            android:gravity="center"

            android:text="Parse Seller"/>

    </LinearLayout>

</LinearLayout>